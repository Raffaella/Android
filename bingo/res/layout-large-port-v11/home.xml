<?xml version="1.0" encoding="UTF-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical" >

 <TextView
        android:id="@+id/tv_calcolatrice"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_gravity=""
        android:text="@string/hello" />
    
    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <EditText
            android:id="@+id/et_primo"
            android:layout_width="287dp"
            android:layout_height="wrap_content"
             />

        <EditText
            android:id="@+id/et_secondo"
            android:layout_width="284dp"
            android:layout_height="wrap_content"
            />
            
    </LinearLayout>


    <LinearLayout
     	xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

   		 <Button
   		     android:id="@+id/bt_canc"
   		     android:layout_width="78dp"
   		     android:layout_height="wrap_content"
   		     android:text="@string/canc"
   		     android:textSize="12sp" />
        <Button
            android:id="@+id/bt_somma"
            android:layout_width="56dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="@string/somma"
            android:textSize="12sp" />
        
         <Button
             android:id="@+id/bt_sottrazione"
             android:layout_width="57dp"
             android:layout_height="wrap_content"
             android:layout_gravity="center_horizontal"
             android:text="@string/sottrazione"
             android:textSize="12sp" />

         <Button
             android:id="@+id/bt_divisione"
             android:layout_width="57dp"
             android:layout_height="wrap_content"
             android:text="@string/divisione"
             android:textSize="12sp" />
         
          <Button
              android:id="@+id/bt_moltiplicazione"
              android:layout_width="61dp"
              android:layout_height="wrap_content"
              android:text="@string/moltiplicazione"
              android:textSize="12sp" />
        
    </LinearLayout>
 
    <Button
        android:id="@+id/bt_exit"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:orientation="horizontal"
        android:text="@string/exit" />
    
     </LinearLayout>